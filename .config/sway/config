# b's sway config

# mod variable / mod key
set $mod Mod4
set $mod_b Mod4+space
set $terminal kitty

# workspace names
set $ws1 "1-sh"
set $ws2 "2-txt"
set $ws3 "3-com"
set $ws4 "4"
set $ws5 "5"
#
set $ws10 "10-web"
set $ws9 "9"
set $ws8 "8"
set $ws7 "7"
set $ws6 "6"
# default screens
